				$('.block-left').loadGroupInfo(result);
				$('.nav-top-first').loadFirstNavTop(result.navtop1);
				$('.nav-top-second').loadSecondNavTop(result.navtop2);
				$('body').createRightBotBlock(result.btnrightbot);
